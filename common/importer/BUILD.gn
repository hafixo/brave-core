import("//mojo/public/tools/bindings/mojom.gni")

mojom("interfaces") {
  sources = [ "profile_import.mojom" ]

  deps = [
    "//chrome/common/importer:interfaces",
    "//components/autofill/core/common/mojom:mojo_types",
    "//mojo/public/mojom/base",
    "//url/mojom:url_mojom_gurl",
  ]
}

source_set("importer") {
  sources = [
    "brave_importer_bridge.h",
    "chrome_importer_utils.cc",
    "chrome_importer_utils.h",
    "importer_constants.h",
    "scoped_copy_file.cc",
    "scoped_copy_file.h",
  ]

  deps = [
    "//components/webdata/common",
    "//sql",
  ]

  if (is_mac) {
    sources += [
      "chrome_importer_utils_mac.mm",
    ]
  }

  if (is_linux) {
    sources += [
      "chrome_importer_utils_linux.cc",
    ]
  }

  if (is_win) {
    sources += [
      "chrome_importer_utils_win.cc",
    ]
  }
}
